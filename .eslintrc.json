{
    "env": {
        "es2021": true,
        "browser": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
        {
            "files": [ "src/**/*.ts" ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["tsconfig.json"]
    },
    "rules": {
        "no-console": "off",
        "@typescript-eslint/restrict-template-expressions": "error"
    }
}
